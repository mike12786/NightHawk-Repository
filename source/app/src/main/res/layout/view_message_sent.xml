<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@color/colorGrey"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

    <com.zapporoo.nighthawk.ui.views.CircularImageView
        android:id="@+id/circProfileImage"
        android:layout_width="@dimen/image_small"
        android:layout_height="@dimen/image_small"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_image_user"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/circProfileImage">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:background="@drawable/ic_chat_bubble_dark">

            <TextView
                android:id="@+id/tvMessageText"
                style="@style/RobotoTextViewStyle.ListItemTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgBtnRate"
                android:layout_marginRight="@dimen/margin_normal"
                android:maxWidth="200dp"
                android:padding="0dp"
                android:text="@string/placeholder_lorem_ipsum_medium"
                android:textColor="@color/colorWhite"/>
        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>