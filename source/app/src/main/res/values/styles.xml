<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="android:editTextStyle">@style/AppEditTextStyle</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppFullScreenTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTextView" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="colorButtonNormal">@color/colorButtonRed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:background">@color/colorBlackTransparent</item>
        <item name="android:textColorHint">@color/grey_light</item>

        <item name="background">@color/colorBlackTransparent</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppButtonStyle.HighlightedButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/highlighted_item</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppButtonStyle.Red" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorButtonRed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppButtonStyle.Blue" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorButtonBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppButtonStyle.BlackTransparent" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorBlackTransparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">0dp</item>
        <item name="textAllCaps">false</item>
    </style>



    <!-- ActionBar styles -->
    <style name="ThemeCustomActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarMy</item>
        <item name="android:itemTextAppearance">@style/RobotoTextViewStyle</item>
    </style>

    <style name="ActionBarMy" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/ActionBarMyTitleText</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMy.MenuTextStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:itemTextAppearance">@style/TextAppearanceWhite</item>
        <item name="android:textAppearanceLargePopupMenu">@style/MyOverflowItemCollor</item>
    </style>

    <style name="MyOverflowItemCollor" parent="android:TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- ACTION BAR TITLE -->
    <style name="ActionBarMyTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <!-- INNER TOOLBAR TITLE -->
    <style name="InnerToolbarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- ACTION BAR MENU ITEM -->
    <style name="ActionBarMy.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- ROBOTO TEXT STYLES -->
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <!-- <item name="android:fontFamily">sans-serif-light</item> -->
        <!--  <item name="android:fontFamily">sans-serif</item> -->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearanceWhite">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PersonalHomeTabItem">
        <item name="android:background">@color/personal_home_item</item>
        <item name="background">@color/personal_home_item</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RoundedSearchEditTextCustom">
        <item name="android:background">@drawable/bg_search_edit_text</item>
        <item name="background">@drawable/bg_search_edit_text</item>
        <item name="android:drawableLeft">@drawable/ic_search_grey_800_24dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="RoundedEditText">
        <item name="android:background">@drawable/bg_search_edit_text</item>
        <item name="background">@drawable/bg_search_edit_text</item>
        <item name="android:drawableLeft">@drawable/ic_gps_off_edit</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingLeft">14dp</item>
    </style>

    <style name="RoundedMessagesEditText">
        <item name="android:background">@drawable/bg_message_edit_text</item>
        <item name="background">@drawable/bg_message_edit_text</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="CustomRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_big</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
    </style>

    <style name="RobotoTextViewStyle.ListItemTitle">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="RobotoTextViewStyle.ListItemBoldTitle">
        <item name="android:textSize">@dimen/textsize_extra_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="RobotoTextViewStyle.ListItemSubtitle">
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="RobotoTextViewStyle.ListItemDescription">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="RobotoTextViewStyle.ListItemBodyText">
        <item name="android:textSize">@dimen/textsize_extra_small</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="TransparentButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/linkTextColor</item>
    </style>

    <style name="CustomSwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="EllipsizedMessageTextView">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
</resources>
